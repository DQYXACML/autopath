{
  "project_id": "${citadelfinance-project_id}",
  "project_name": "${citadelfinance-project_name}",
  "chain_id": 31337,
  "contracts": [
    "${citadelStaking}",
    "${attacker}",
    "${attackContract}",
    "${citadelRedeem}",
    "${wETHUSDC}",
    "${wETH}",
    "${uSDC}",
    "${cIT}",
    "${camelotRouter}"
  ],
  "invariants": [
    {
      "id": "citadelfinance-balance-check",
      "name": "Contract Balance Monitor",
      "type": "threshold",
      "description": "监控合约余额异常变化",
      "parameters": {
        "max_change_percentage": 0.5,
        "time_window": 300
      }
    },
    {
      "id": "citadelfinance-state-consistency",
      "name": "State Consistency Check",
      "type": "custom",
      "description": "检查合约状态一致性",
      "parameters": {
        "enable_storage_check": true
      }
    }
  ],
  "fuzzing_config": {
    "enabled": true,
    "threshold": 0.1,
    "max_variations": 100,
    "workers": 4,
    "timeout_seconds": 20,
    "output_path": "./fuzzing_results",
    "auto_trigger": false,
    "target_functions": [
      {
        "contract": "${mainContract}",
        "name": "deposit",
        "signature": "deposit(address,uint256,uint8)"
      },
      {
        "contract": "${mainContract}",
        "name": "redeemCalculator",
        "signature": "redeemCalculator(address)"
      },
      {
        "contract": "${mainContract}",
        "name": "getCITInUSDAllFixedRates",
        "signature": "getCITInUSDAllFixedRates(address,uint256)"
      },
      {
        "contract": "${mainContract}",
        "name": "getTotalTokenStakedForUser",
        "signature": "getTotalTokenStakedForUser(address,uint8,address)"
      }
    ],
    "min_similarity": 0.1,
    "save_high_similarity": true,
    "print_realtime": true
  },
  "alert_config": {
    "enabled": true,
    "webhook_url": "http://localhost:9000/alerts",
    "severity": "medium",
    "alert_throttle_seconds": 60,
    "notification_channels": [
      "webhook"
    ]
  },
  "monitoring_config": {
    "block_polling_interval_ms": 1000,
    "tx_buffer_size": 100,
    "enable_historical_analysis": false
  }
}